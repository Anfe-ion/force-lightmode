{
    "manifest_version": 3,
    "name": "Forzar Light Mode",
    "version": "1.0",
    "description": "Activa modo claro con un clic.",
    "permissions": ["scripting", "activeTab"],
    "action": {
      "default_title": "Forzar modo claro",
      "default_icon": {
        "16": "ico.png",
        "32": "ico.png",
        "48": "ico.png",
        "128": "ico.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "ico.png",
      "32": "ico.png",
      "48": "ico.png",
      "128": "ico.png"
    }
  }  